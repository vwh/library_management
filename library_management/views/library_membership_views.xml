<odoo>
    <data>
        <!-- Library Membership List View -->
        <record id="library_membership_view_list" model="ir.ui.view">
            <field name="name">library.membership.list</field>
            <field name="model">library.membership</field>
            <field name="arch" type="xml">
                <list string="Memberships">
                    <field name="partner_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                    <field name="product_id"/>
                </list>
            </field>
        </record>

        <!-- Library Membership Form View -->
        <record id="library_membership_view_form" model="ir.ui.view">
            <field name="name">library.membership.form</field>
            <field name="model">library.membership</field>
            <field name="arch" type="xml">
                <form string="Membership">
                    <sheet>
                        <group>
                            <field name="partner_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="state"/>
                            <field name="product_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Library Membership Action -->
        <record id="library_membership_action" model="ir.actions.act_window">
            <field name="name">Library Memberships</field>
            <field name="res_model">library.membership</field>
            <field name="view_mode">list,form</field>
            <!-- Specifies the views to be used and their order -->
            <field name="view_ids" eval="[(5, 0, 0),
                                          (0, 0, {'view_mode': 'list', 'view_id': ref('library_membership_view_list')}),
                                          (0, 0, {'view_mode': 'form', 'view_id': ref('library_membership_view_form')})]"/>
        </record>

        
    </data>
</odoo>