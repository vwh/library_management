<odoo>
    <!-- Borrowing Search View -->
    <record id="library_borrowing_view_search" model="ir.ui.view">
        <field name="name">library.borrowing.search</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <search string="Borrowing Records">
                <field name="book_id"/>
                <field name="borrower_id"/>
                <field name="borrow_date"/>
                <field name="return_date"/>
                <separator/>
                <filter string="Active Borrowings" name="active" domain="[('is_returned', '=', False)]"/>
                <filter string="Returned Books" name="returned" domain="[('is_returned', '=', True)]"/>
                <separator/>
                <filter string="All Records" name="all" domain="[]"/>
                <group expand="0" string="Group By">
                    <filter string="Book" name="group_book" domain="[]" context="{'group_by': 'book_id'}"/>
                    <filter string="Borrower" name="group_borrower" domain="[]" context="{'group_by': 'borrower_id'}"/>
                    <filter string="Status" name="group_status" domain="[]" context="{'group_by': 'is_returned'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Borrowing List View -->
    <record id="library_borrowing_view_list" model="ir.ui.view">
        <field name="name">library.borrowing.list</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <list string="Borrowing Records" decoration-muted="is_returned" decoration-info="not is_returned">
                <field name="book_id"/>
                <field name="borrower_id"/>
                <field name="borrow_date"/>
                <field name="return_date"/>
                <field name="is_returned" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Borrowing Form View -->
    <record id="library_borrowing_view_form" model="ir.ui.view">
        <field name="name">library.borrowing.form</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <form string="Borrowing Record">
                <header>
                    <button name="action_return_book" 
                            type="object" 
                            string="Return Book" 
                            class="oe_highlight"
                            invisible="is_returned"/>
                </header>
                <group>
                    <field name="book_id"/>
                    <field name="borrower_id"/>
                    <field name="borrow_date"/>
                    <field name="return_date"/>
                    <field name="is_returned"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Borrowing Action -->
    <record id="library_borrowing_action" model="ir.actions.act_window">
        <field name="name">Borrowing Records</field>
        <field name="res_model">library.borrowing</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_all': 1}</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                      (0, 0, {'view_mode': 'list', 'view_id': ref('library_borrowing_view_list')}),
                                      (0, 0, {'view_mode': 'form', 'view_id': ref('library_borrowing_view_form')})]"/>
    </record>
</odoo>