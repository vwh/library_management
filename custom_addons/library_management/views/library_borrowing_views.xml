<odoo>
    <!-- Borrowing List View -->
    <record id="library_borrowing_view_list" model="ir.ui.view">
        <field name="name">library.borrowing.list</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <list string="Borrowing Records">
                <field name="book_id"/>
                <field name="borrower_id"/>
                <field name="borrow_date"/>
                <field name="return_date"/>
                <field name="is_returned"/>
            </list>
        </field>
    </record>

    <!-- Borrowing Form View -->
    <record id="library_borrowing_view_form" model="ir.ui.view">
        <field name="name">library.borrowing.form</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <form string="Borrowing Record">
                <header>
                    <button name="action_return_book" type="object" string="Return Book" class="oe_highlight"/>
                </header>
                <group>
                    <field name="book_id"/>
                    <field name="borrower_id"/>
                    <field name="borrow_date"/>
                    <field name="return_date"/>
                    <field name="is_returned"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Borrowing Action -->
    <record id="library_borrowing_action" model="ir.actions.act_window">
        <field name="name">Borrowing Records</field>
        <field name="res_model">library.borrowing</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('is_returned', '=', False)]</field>
        <field name="view_ids" eval="[(5, 0, 0),
                                      (0, 0, {'view_mode': 'list', 'view_id': ref('library_borrowing_view_list')}),
                                      (0, 0, {'view_mode': 'form', 'view_id': ref('library_borrowing_view_form')})]"/>
    </record>
</odoo>